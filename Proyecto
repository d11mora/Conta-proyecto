			ivp3 = v3 * 0.12;
			cout << "  Iva por pagar                                             " << fixed << setprecision(2) << ivp3 << endl;
			cl2 = clientes + cl1;
			clientes = cl2;
			v4 = Ventas + v3;
			Ventas = v4;
			ivp4 = Iva_por_pagar + ivp3;
			Iva_por_pagar = ivp4;
